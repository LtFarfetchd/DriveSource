{
  "help": {
    "shortcut": "h",
    "description": "prints this help message"
  },
  "up": {
    "shortcut": "u",
    "description": "navigates one directory up (if possible)"
  },
  "down": {
    "shortcut": "d",
    "description": "navigates one directiory deeper (if `dir` exists)"
  },
  "list": {
    "shortcut": "l",
    "description": "lists the files and folders in the current directory",
    "arguments": ["dir"]
  },
  "target": {
    "shortcut": "t",
    "description": "confirms either the current directory or `dir` (if provided) as the source directory",
    "arguments": ["?dir"]
  }
}
